<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <h3>7日間分の投稿数</h3>
      <%= render 'count_posts_7days', \
                  {
                      book_count_6days_ago: @book_count_6days_ago \
                    , book_count_5days_ago: @book_count_5days_ago \
                    , book_count_4days_ago: @book_count_4days_ago \
                    , book_count_3days_ago: @book_count_3days_ago \
                    , book_count_2days_ago: @book_count_2days_ago \
                    , book_count_1days_ago: @book_count_1days_ago \
                    , book_count_today:     @book_count_today \
                  }
      %>
      <%= render 'chart', \
                  {
                      book_count_6days_ago: @book_count_6days_ago \
                    , book_count_5days_ago: @book_count_5days_ago \
                    , book_count_4days_ago: @book_count_4days_ago \
                    , book_count_3days_ago: @book_count_3days_ago \
                    , book_count_2days_ago: @book_count_2days_ago \
                    , book_count_1days_ago: @book_count_1days_ago \
                    , book_count_today:     @book_count_today \
                  }
      %>
    </div>
  </div>
</div>
