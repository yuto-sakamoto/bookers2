<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <h3>投稿数の前日比・前週比</h3>
      <%= render 'post_count_list',
                {
                  today_books_count: @today_books_count \
                  , yesterday_books_count: @yesterday_books_count \
                  , this_week_books_count: @this_week_books_count \
                  , last_week_books_count: @last_week_books_count \
                  , compare_with_previous_day: @compare_with_previous_day \
                  , compare_with_previous_week: @compare_with_previous_week \
                }
      %>
    </div>
  </div>
</div>
