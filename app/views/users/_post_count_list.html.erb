<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">今日の投稿数</th>
      <th scope="col">前日の投稿数</th>
      <th scope="col">前日比</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= today_books_count %></td>
      <td><%= yesterday_books_count %></td>
      <td><%= compare_with_previous_day %>%</td>
    </tr>
  </tbody>
</table>

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">今週の投稿数</th>
      <th scope="col">前週の投稿数</th>
      <th scope="col">前週比</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= this_week_books_count %></td>
      <td><%= last_week_books_count %></td>
      <td><%= compare_with_previous_week %>%</td>
    </tr>
  </tbody>
</table>